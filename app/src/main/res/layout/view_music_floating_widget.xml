<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/music_floating_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_margin="16dp"
    android:background="@drawable/bg_music_widget_container"
    android:clickable="true"
    android:elevation="10dp"
    android:focusable="true"
    android:padding="12dp"
    android:visibility="gone">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/homeCardBackground"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/music_cover"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/cover_playlist_placeholder"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_playlist_cover"
                android:layout_marginRight="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/music_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/homeTextPrimary"
                    android:textSize="16sp"
                    android:text="" />

                <TextView
                    android:id="@+id/music_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/homeTextSecondary"
                    android:textSize="12sp"
                    android:text="" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/music_action_play"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:padding="8dp"
                android:src="@drawable/play"
                android:tint="@color/homeTextPrimary" />

            <ImageButton
                android:id="@+id/music_action_close"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/close"
                android:padding="8dp"
                android:src="@drawable/ic_close"
                android:tint="@color/homeTextPrimary" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
