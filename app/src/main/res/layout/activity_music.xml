<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/song_cover">

    <!-- 半透明遮罩 -->
    <View
        android:id="@+id/mask_layer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#88000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 返回按钮 -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:src="@drawable/ic_arrow_back_line"
        android:tint="@android:color/white"
        android:contentDescription="返回"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp" />

    <!-- 封面区域 -->
    <FrameLayout
        android:id="@+id/cover_container"
        android:layout_width="260dp"
        android:layout_height="260dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_playlist_cover"
            android:src="@drawable/cover_playlist_placeholder" />

        <ImageButton
            android:id="@+id/btn_favorite_song"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="top|end"
            android:layout_margin="10dp"
            android:background="@drawable/bg_favorite_circle"
            android:padding="6dp"
            android:src="@drawable/ic_heart_outline_white"
            android:tint="@android:color/white" />
    </FrameLayout>

    <!-- 歌曲名 -->
    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="正在播放：歌曲名"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        app:layout_constraintTop_toBottomOf="@id/cover_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp" />

    <!-- 控制按钮区域 -->
    <LinearLayout
        android:id="@+id/control_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_song_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp">

        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/prev"
            android:background="@null"
            android:tint="@android:color/white"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/play"
            android:background="@null"
            android:tint="@android:color/white"
            android:padding="12dp" />

        <ImageButton
            android:id="@+id/btn_stop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/stop"
            android:background="@null"
            android:tint="@android:color/white"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/next"
            android:background="@null"
            android:tint="@android:color/white"
            android:padding="10dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
