<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/banner_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_banner_item">

    <LinearLayout
        android:id="@+id/banner_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_banner_foreground"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/banner_title"
            style="@style/HomeBannerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banner Title" />

        <TextView
            android:id="@+id/banner_description"
            style="@style/HomeBannerSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Banner description" />

    </LinearLayout>

</FrameLayout>
