<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:padding="12dp">

    <ImageView
        android:id="@+id/image_song_cover"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/cover_playlist_placeholder"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/text_song_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_song_cover"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@id/image_song_cover"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="歌曲名称"
        android:layout_toRightOf="@id/image_song_cover"
        android:layout_marginLeft="12dp" />

    <TextView
        android:id="@+id/text_song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_song_title"
        android:layout_toEndOf="@id/image_song_cover"
        android:layout_marginStart="12dp"
        android:textColor="@android:color/secondary_text_dark"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="歌手"
        android:layout_toRightOf="@id/image_song_cover"
        android:layout_marginLeft="12dp" />

    <TextView
        android:id="@+id/text_song_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_song_cover"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:text="03:45"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/text_song_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_song_artist"
        android:layout_toEndOf="@id/image_song_cover"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="歌曲描述"
        android:layout_toRightOf="@id/image_song_cover"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp" />

</RelativeLayout>
