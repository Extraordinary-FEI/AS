<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_task_item"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/task_name"
            style="@style/HomeTaskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Task name" />

        <TextView
            android:id="@+id/task_status"
            style="@style/HomeTaskStatusChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进行中" />
    </LinearLayout>

    <TextView
        android:id="@+id/task_type"
        style="@style/HomeTaskMeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="类型" />

    <TextView
        android:id="@+id/task_time"
        style="@style/HomeTaskMeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="时间" />

    <TextView
        android:id="@+id/task_capacity"
        style="@style/HomeTaskMeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="进度" />

    <TextView
        android:id="@+id/task_registration_status"
        style="@style/HomeTaskDeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="报名状态" />

    <TextView
        android:id="@+id/task_description"
        style="@style/HomeTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="任务描述" />

</LinearLayout>
