<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="4dp"
    android:layout_marginBottom="12dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <ImageView
            android:id="@+id/image_home_product"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_playlist_cover"
            android:contentDescription="@string/app_name"
            tools:src="@drawable/song_cover" />

        <TextView
            android:id="@+id/text_home_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/textPrimary"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="应援灯牌 · 官方款" />

        <TextView
            android:id="@+id/text_home_product_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/textSecondary"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="高亮LED，三档调光，官方正版品质。" />

        <TextView
            android:id="@+id/text_home_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="¥199.00" />

    </LinearLayout>

</android.support.v7.widget.CardView>

