<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_floating_music"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/floatingMusicBackground"
    android:padding="4dp"
    android:visibility="gone">

    <android.support.v7.widget.CardView
        android:id="@+id/card_floating_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:cardBackgroundColor="@color/floatingMusicBackground"
        app:cardCornerRadius="18dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="64dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/image_floating_cover"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/bg_playlist_cover"
                android:contentDescription="@string/floating_music_cover"
                android:scaleType="centerCrop"
                android:src="@drawable/cover_playlist_placeholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/text_floating_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/floating_music_title_placeholder"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_floating_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingTop="2dp"
                    android:text="@string/floating_music_subtitle_empty"
                    android:textColor="@color/colorOnPrimary"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/button_floating_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/floating_music_play_pause"
                android:scaleType="centerInside"
                android:src="@drawable/pause"
                android:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/button_floating_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/close"
                android:scaleType="centerInside"
                android:src="@drawable/ic_close"
                android:tint="@android:color/white" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/view_floating_bubble"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical|end"
        android:background="@drawable/bg_music_bubble"
        android:contentDescription="@string/floating_music_cover"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cover_playlist_placeholder"
        android:visibility="gone" />

</FrameLayout>
